{% block content %}
	<div class="container-fluid">
		<a class="logo_nav" href="/"><img src="/assets/images/logo_dream.png" class="img-responsive logo pt-2"></a>
		<div class="row nav_desktop">
			<nav class="col-6" id="navbar_user_css_desktop">
				<ul class="nav_css">
					<li class="navbar_user_li">
						<a class="nav-link active" aria-current="page" href="/"><span class="las la-home"></span><span> Home</span></a>
					</li>
					<li class="navbar_user_li">
						<a class="nav-link" href="/movie/indexForUser"><span class="lab la-youtube"></span><span> Upload</span></a>
					</li>
					<li class="navbar_user_li">
