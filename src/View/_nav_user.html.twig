					</li>
				</ul>
			</nav>
			<nav class="col-6" id="navbar_user_css_desktop_right">
				<ul class="col nav_css_right">
					{% if session.user is not defined %}
						<li class="navbar_user_li">
							<a class="nav-link" href="/contact/new"><span class="las la-envelope"></span></a>
						</li>
					{% endif %}
					{% if session.user is defined %}
						{% if session.user.is_admin == 1 %}
							<li class="navbar_user_li">
								<a class="nav-link" href="/admin/index"><span class="las la-user-circle"></span></a>
							</li>
						{% endif %}
						{% if session.user.is_admin == 0 %}
							<li class="navbar_user_li">
								<a class="nav-link" href="/security/show"><span class="las la-user-circle"></span></a>
							</li>
							<li class="navbar_user_li">
								<a class="nav-link" href="/contact/newFormUser"><span class="las la-envelope"></span></a>
							</li>
							<li class="navbar_user_li">
								<a class="nav-link" href="/home/cart"><span class="las la-shopping-cart"></span></a>
							</li>
						{% endif %}
						<li class="navbar_user_li">
							<a class="nav-link" href="/security/logout"><span class="las la-sign-out-alt"></span></a>
						</li>
					{% endif %}
					{% if session.user is not defined %}
						<li class="navbar_user_li">
							<a class="nav-link" href="/security/login"><span class="las la-sign-in-alt"></span></a>
						</li>
					{% endif %}
				</ul>
			</nav>
		</div>
	</div>

