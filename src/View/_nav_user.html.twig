				<a class="nav-link" href="/product/indexUser"><li class="navbar_user_li">Produits</li></a>
				{% if session.user is not defined %}
					<a class="nav-link" href="/contact/new"><li class="navbar_user_li">Contact</li></a>
				{% endif %}
				{% if session.user is defined %}
					{% if session.user.is_admin == 0 %}
						<a class="nav-link" href="/security/show"><li class="navbar_user_li">Mon Compte</li></a>
						<a class="nav-link" href="/contact/newFormUser"><li class="navbar_user_li">Contactez-nous</li></a>
						<a class="nav-link" href="/home/cart"><li class="navbar_user_li">Panier</li></a>
					{% endif %}
					<a class="nav-link" href="/security/logout"><li class="navbar_user_li">Logout</li></a>
					{% if session.user.is_admin == 1 %}
						<a class="nav-link" href="/admin/index"><li class="navbar_user_li">Admin</li></a>
					{% endif %}
				{% endif %}
				{% if session.user is not defined %}
					<a class="nav-link" href="/security/login"><li class="navbar_user_li">Connexion</li></a>
				{% endif %}
			</ul>
		</div>
	</nav>
