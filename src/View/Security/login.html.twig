{% extends 'layout.html.twig' %}
{% block title %} - Login {% endblock %}
{% block content %}
    {% include "/_nav_user.html.twig" %}
    <section id="body" class="pt-5">
        <h2 class="text-center mb-5">Connexion</h2>
        <div class="separation"><hr></div>
        <div class="container-fluid p-4">
            <div class="contact_form row m-5">
                <form method="post">
                    <input type="hidden" value="{{ user.id }}" name="id">
                        <div class="col-md mx-3 my-3">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="floatingInputs" placeholder="Pseudo" name="username">
                                <label for="floatingInput" class="form-label pt-2">Pseudo: </label>
                            </div>
                            {% if errors.username is defined and not empty %}
                            <div class="alert" role="alert" id="contact_error">       
                                <p>{{ errors.username }}</p>
                            </div>
                            {% endif %}
                        </div>
                        <div class="col-md mx-3 my-3">
                            <div class="form-floating">
                                <input type="password" class="form-control" id="floatingInputs" placeholder="Mot de passe" name="password">
                                <label for="floatingInput" class="form-label pt-2">Mot de passe :</label>
                            </div>
                            {% if errors.password is defined and not empty %}
                            <div class="alert" role="alert" id="contact_error">       
                                <p>{{ errors.password }}</p>
                            </div>
                            {% endif %}
                            {% if errors.password1 is defined and not empty %}
                            <div class="alert" role="alert" id="contact_error">       
                                <p>{{ errors.password1 }}</p>
                            </div>
                            {% endif %}
                        </div>
                    <div class="mt-3 text-center">
                        <button type="submit" class="button_gradient m-5">Connexion</button>
                        <p class="mt-5" id="redirect_login">Pas encore inscrit ?
                        <a href="/security/register" class="button m-3">S'inscrire</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}

