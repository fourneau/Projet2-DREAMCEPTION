{% extends 'adminlayout.html.twig' %}
{% block title %}{% endblock %}
{% block content %}
    {% include "Admin/adminheader.html.twig" %}
        <main>
            <div class="time">
				<span class="defile"> {{ "now"|date("H:i:s d/m/Y") }} </span>
			</div>
            <div class="card">
                <div class="card-index">
                    <h2>Catégories</h2>
                    <div class="form-floating mb-3 text-end">
                        <a href="/admin/addCategory/">
                            <button> Ajouter</button>
                        </a>
                    </div>
                </div>
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col" class="text-white">Catégorie</th>
                        <th scope="col" class="text-white"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td class="text-white"><a href="/admin/showCategory/{{ category.id }}" class="text-white">{{ category.name }}</a></td>
                            <td class="text-end">
                                <a href="/admin/editCategory/{{ category.id }}">
                                    <button> Modifier</button>
                                </a>
                                <a href="/admin/deleteCat/{{ category.id }}" onclick="return(confirm('Etes-vous sûr de vouloir supprimer cette catégorie ainsi que tous ses produits?'));">
                                    <button> Supprimer</button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div class="card-back">
                    <a href="/admin/index">
                        <button> Retour</button>
                    </a>
                </div>
            </div>
        </main>
    </div>
    </div>
{% endblock %}
